@model IEnumerable<Day19Project.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Product</a>
</p>
<style>
    #divCard{
        position:relative;
        float:left;
        height:20%;
        width:35%;
    }
</style>

@foreach (var item in Model)
       {
           <div id="divCard" class="card">

              <!--Card image-->
              <div class="view">
          <img width="150" height="150" src="@Url.Content(item.Pic)" alt="No Pic" class="card-img-top" alt="photo">
                <a href="#">
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>

              <!--Card content-->
              <div class="card-body">
                <!--Title-->
                <h4 class="card-title">@item.Name</h4>

                <!--Text-->
                Category: <label class="card-text">@item.Category</label>
                <p class="card-text">@item.Description</p>
                <a href="/Product/Details/@item.Id" class="btn btn-primary">Buy for $@item.Price</a>
            
              </div>

            </div>

       }