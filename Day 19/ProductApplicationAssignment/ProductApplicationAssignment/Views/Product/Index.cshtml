@model IEnumerable<ProductApplicationAssignment.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
    #divCard{
        text-align: center;
        position:relative;
        float:left;
        height:20%;
        width:30%;
    }
</style>

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New Product</a>
</p>


    @foreach (var item in Model)
    {
        <div id="divCard" class="card">

            <!--Card image-->
            <div class="view">
        <img width="150" height="150" src="@Url.Content(item.Pic)" alt="No Pic" class="card-img-top" alt="photo">
            <a href="#">
                <div class="mask rgba-white-slight"></div>
            </a>
            </div>

            <!--Card content-->
            <div class="card-body">
            <!--Title-->
            <h4 class="card-title">@item.Name</h4>

            <!--Text-->
            <p class="card-text"><b>@item.Category</b></p>
            <p class="card-text">@item.Description</p>
            <a class="btn btn-outline-primary" asp-action="Buy" asp-route-id="@item.Id">Buy for $@item.Price</a>
            </div>

        </div>

    }