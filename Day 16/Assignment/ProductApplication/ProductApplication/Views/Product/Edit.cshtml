    @Html.LabelFor(m=>m.Quantity,htmlAttributes:new{@class="form-label"})
    @Html.EditorFor(m=>m.Quantity,new{@htmlAttributes=new{@class="form-control"}})
    @Html.LabelFor(m=>m.Remarks,htmlAttributes:new{@class="form-label"})
